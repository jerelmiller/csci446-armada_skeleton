%tr[role]
  %td= h role
  %td= h truncate(role.description, :length => 40)
  %td
    = link_to image_tag('icon_small_show.png', :border => 0), admin_role_path(role)
    = link_to image_tag('icon_small_edit.png', :border => 0), edit_admin_role_path(role)
    = link_to image_tag('icon_small_delete.png', :border => 0), admin_role_path(role), :confirm => 'Are you sure?', :method => :delete