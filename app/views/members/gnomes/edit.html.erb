<h1>Editing gnome</h1>

<% form_for([:members, @gnome]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :cost %><br />
    <%= f.text_field :cost %>
  </p>
  <p>
    <%= f.label :age %><br />
    <%= f.text_field :age %>
  </p>
  <p>
    Gender
	<%= f.radio_button :gender, 'Male' %> 
	<%= f.label :gender, 'Male', :value => 'Male' %>
	<%= f.radio_button :gender, 'Female' %>
	<%= f.label :gender, 'Female', :value => 'Female' %>
	<%= f.radio_button :gender, 'Ambiguous' %>
	<%= f.label :gender, 'Ambiguous', :value => 'Ambiguous' %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>