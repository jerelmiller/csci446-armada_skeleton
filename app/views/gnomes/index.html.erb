<h1>All Gnomes</h1>

<div id="title">
  <% if @num_gnomes == 0 %>
	<h4><%= pluralize(@num_gnomes, "gnome") %></h4>
  <% else %>
    <h4><%= pluralize(@num_gnomes, "gnome") %> as of <%= Gnome.most_recent.created_at.strftime("%b. %d, %Y.") %></h4>
  <% end %>
</div>


<br/>

<div id="new_gnome">
  <%= link_to 'New Gnome', new_gnome_path %>
</div>
<br/>
<br/>
<div class="paginate">
  <%= will_paginate @gnomes %>
</div>
<br/>
<br/>
<br/>
<% if @num_gnomes > 0 %>
  <table>
  <% @gnomes.each do |gnome| %>
    <tr>
      <td>image</td>
      <td><%=h link_to "#{gnome.name}", gnome %> by <%=h gnome.user %> (<%=h gnome.cost %> ArmadaBucks) <br/>
		<%=h gnome.description %></td>
      <td><%= link_to (image_tag('/images/icon_small_show.png', :border => 0, :title => "Show #{gnome.name}")), gnome %></td>
    </tr>
  <% end %>
  </table>
<% end %>

<br />
