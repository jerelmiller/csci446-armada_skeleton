%h1 All Gnomes
#title
  - if @num_gnomes == 0
    %h4= pluralize(@num_gnomes, "gnome")
  - else
    %h4
      = pluralize(@num_gnomes, "gnome")
      as of #{Gnome.most_recent.created_at.strftime("%b. %d, %Y.")}
%br/
#new_gnome
  = link_to 'New Gnome', new_gnome_path
%br/
%br/
.paginate
  = will_paginate @gnomes
%br/
%br/
%br/
- if @num_gnomes > 0
  %table
    - @gnomes.each do |gnome|
      %tr
        %td image
        %td
          = h link_to "#{gnome.name}", gnome
          by #{h gnome.user} (#{h gnome.cost} ArmadaBucks)
          %br/
          = h truncate(gnome.description, :length => 65)
          = link_to "more", '#'
        %td
          = link_to (image_tag('/images/icon_small_show.png')), gnome
